[run]
source = badidatetime
omit =
    */tests/*
    */examples/*

[report]
show_missing = True
skip_covered = True
precision = 3

# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

[html]
title = Baha'i Calendar
directory = docs/htmlcov
